{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "authApi",
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{*remainder}"
        },
        "Transforms": [
          { "PathPattern": "/{remainder}" }
        ]
      },
      {
        "RouteId": "canteenApi",
        "ClusterId": "canteenCluster",
        "Match": {
          "Path": "/canteen/{*remainder}"
        },
        "Transforms": [
          { "PathPattern": "/{remainder}" }
        ]
      },
      {
        "RouteId": "chatApi",
        "ClusterId": "chatCluster",
        "Match": {
          "Path": "/chat/{*remainder}"
        },
        "Transforms": [
          { "PathPattern": "/{remainder}" }
        ]
      },
      {
        "RouteId": "timeTableApi",
        "ClusterId": "timeTableCluster",
        "Match": {
          "Path": "/timetable/{*remainder}"
        },
        "Transforms": [
          { "PathPattern": "/{remainder}" }
        ]
      }
    ],
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authCluster/default": {
            "Address": "http://auth/"
          }
        }
      },
      "canteenCluster": {
        "Destinations": {
          "canteenCluster/default": {
            "Address": "http://canteen/"
          }
        }
      },
      "chatCluster": {
        "Destinations": {
          "chatCluster/default": {
            "Address": "http://chat/"
          }
        }
      },
      "timeTableCluster": {
        "Destinations": {
          "timeTableCluster/default": {
            "Address": "http://timetable/"
          }
        }
      }
    }
  }
}
